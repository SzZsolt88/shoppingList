<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.recyclerview2">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:allowBackup="true"
        android:theme="@style/shoppingListTheme"
        android:usesCleartextTraffic="true"
        android:fullBackupContent="@xml/backup_descriptor">
        <activity android:name=".user.UserLoginActivity"
            android:theme="@style/shoppingListTheme.NoActionBar"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".user.UserRegisterActivity"/>
        <activity android:name=".user.UserEditDataActivity"/>
        <activity android:name=".lists.ListActivity"/>
        <activity android:name=".products.ProductActivity"/>
        <activity android:name=".contacts.ContactsActivity"/>
        <activity android:name=".charts.ChartActivity"/>
        <activity android:name=".charts.RecommendedProductsActivity"/>
        <activity android:name=".charts.PieChartActivity"/>
    </application>
</manifest>